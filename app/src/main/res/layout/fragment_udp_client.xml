<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/udp_client_ip_edit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="输入IP地址"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/udp_client_connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户端初始化"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_ip_edit" />

    <TextView
        android:id="@+id/udp_client_connect_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_connect_btn" />

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_connect_txt" />

    <EditText
        android:id="@+id/udp_client_send_message_edit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="输入发送内容"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_one" />

    <Button
        android:id="@+id/udp_client_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送到服务端"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_send_message_edit" />

    <TextView
        android:id="@+id/udp_client_send_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_send_btn" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_send_txt" />

    <Button
        android:id="@+id/udp_client_receive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="接收服务端的消息"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_two" />

    <TextView
        android:id="@+id/udp_client_receive_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_receive_btn" />

    <View
        android:id="@+id/divider_three"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E0E0E0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udp_client_send_txt" />


</androidx.constraintlayout.widget.ConstraintLayout>